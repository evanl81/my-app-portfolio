<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/lightgray">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
        android:background="@color/lightgray">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/appTitle"
            android:layout_centerHorizontal="true"
            android:text="@string/app_title"
            android:textColor="@color/bluegray"
            android:textAllCaps="true"
            android:textSize="@dimen/headingTypeSize"
            android:layout_marginBottom="@dimen/headingBottomMargin"/>

        <Button
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="wrap_content"
            android:text="@string/spotify_button"
            android:textColor="@color/white"
            android:background="@color/teal"
            android:id="@+id/spotifyButton"
            android:layout_below="@+id/appTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/buttonTopMargin"
            android:onClick="buttonOnClick"/>

        <Button
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="wrap_content"
            android:text="@string/scores_button"
            android:textColor="@color/white"
            android:background="@color/teal"
            android:id="@+id/scoresButton"
            android:layout_below="@+id/spotifyButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/buttonTopMargin"
            android:onClick="buttonOnClick"/>

        <Button
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="wrap_content"
            android:text="@string/library_button"
            android:textColor="@color/white"
            android:background="@color/teal"
            android:id="@+id/libraryButton"
            android:layout_below="@+id/scoresButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/buttonTopMargin"
            android:onClick="buttonOnClick"/>

        <Button
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="wrap_content"
            android:text="@string/bigger_button"
            android:textColor="@color/white"
            android:background="@color/teal"
            android:id="@+id/biggerButton"
            android:layout_below="@+id/libraryButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/buttonTopMargin"
            android:textSize="14dp"
            android:onClick="buttonOnClick"/>

        <Button
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="wrap_content"
            android:text="@string/xyz_button"
            android:textColor="@color/white"
            android:background="@color/teal"
            android:id="@+id/xyzButton"
            android:layout_below="@+id/biggerButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/buttonTopMargin"
            android:onClick="buttonOnClick"/>

        <Button
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="wrap_content"
            android:text="@string/capstone_button"
            android:textColor="@color/white"
            android:background="@color/bluegray"
            android:id="@+id/capstoneButton"
            android:layout_below="@+id/xyzButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/buttonTopMargin"
            android:onClick="buttonOnClick"/>
    </RelativeLayout>
</ScrollView>
